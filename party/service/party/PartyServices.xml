<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.0.xsd">

    <service verb="create" noun="Person" type="inline">
        <in-parameters>
            <parameter name="partyId" required="true"/>
            <parameter name="firstName" required="true"/>
            <parameter name="lastName" required="true"/>
            <parameter name="dateOfBirth" type="Date"/>
            <attributes-all target-attr-name="parameter" include="in"/>
        </in-parameters>
        <out-parameters>
            <parameter name="message"/>
        </out-parameters>
        <actions>
            <script location="component://party/service/party/createPerson.groovy"/>
        </actions>
    </service>
</services>